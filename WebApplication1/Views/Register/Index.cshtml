@{
    ViewData["Title"] = "Login";
}
@model WebApplication1.ViewModels.RegisterModel
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">

            <div class="card-body">
                <p class="login-box-msg">Yeni hesap oluştur.</p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form asp-action="Index" method="post">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="FullName"placeholder="Ad Soyad">
                        <span asp-validation-for="FullName" class="text-danger"></span>

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" asp-for="Password" placeholder="Şifre">
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" asp-for="PasswordConfirm" placeholder="Şifre tekrar">
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                                <label for="agreeTerms">
                                    <a href="#">Şartları</a> okudum ve kabul ediyorum.
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <a asp-controller="Login" asp-action="Index" class="text-center">Oturum Aç</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
 </body>
