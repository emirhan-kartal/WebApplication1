@model List<WebApplication1.ViewModels.UserViewModel>

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kullanıcı Listesi</h1>
                </div>
                <div class="col-sm-6 text-right">
                    <a asp-action="CreateUser" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Yeni Kullanıcı Ekle
                    </a>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <table id="userTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Ad Soyad</th>
                                        <th>Email</th>
                                        <th>Rol</th>
                                        <th>Yüklenen Dosya Sayısı</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var user in Model)
                                        {
                                            <tr>
                                                <td>@user.Id</td>
                                                <td>@user.FullName</td>
                                                <td>@user.Email</td>
                                                <td>@user.Role</td>
                                                <td>@user.UploadedFilesCount</td>
                                                <td>
                                                    <div class="btn-group btn-group-sm ">
                                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary mr-2">Düzenle</a>
                                                        @if (!user.isSuperAdmin)
                                                        {
                                                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Sil</a>

                                                        } 
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            @if (Model == null || !Model.Any())
                            {
                                <div class="d-flex justify-content-center">
                                    <div style="padding:1rem;">
                                        Kullanıcı bulunmuyor.
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
