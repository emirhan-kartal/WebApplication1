@model WebApplication1.ViewModels.UserViewModel

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kullanıcı Oluştur</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Yeni Kullanıcı Bilgileri</h3>
                </div>

                <form asp-action="CreateUser" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FullName">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" required type="email" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordHash">Şifre</label>
                            <input asp-for="PasswordHash" class="form-control" type="password" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Role">Rol</label>
                            <select asp-for="Role" class="form-control" required>
                                <option value="">Rol Seçiniz</option>
                                <option value="Admin">Admin</option>
                                <option value="User">Kullanıcı</option>
-                            </select>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a asp-action="Index" class="btn btn-default">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>