@model WebApplication1.ViewModels.UserViewModel

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kullanıcı Silme</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Kullanıcı Silme Onayı</h3>
                </div>

                <form asp-action="DeleteUser" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">
                        <div class="alert alert-warning" role="alert">
                            <strong>Dikkat!</strong> Bu kullanıcıyı silmek istediğinizden emin misiniz?
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Ad Soyad</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="@Model.FullName" readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="@Model.Email" readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Rol</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="@Model.Role" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-danger">Evet, Kullanıcıyı Sil</button>
                        <a asp-action="Index" class="btn btn-default">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>